# FindSpot Backend Environment Configuration
# For Raspberry Pi 5 deployment

# Flask Configuration
SECRET_KEY=
FLASK_ENV=production
FLASK_DEBUG=False

# Database Configuration
DATABASE_URL=sqlite:///data/findspot.db

# MQTT Broker Configuration (REQUIRED)
# Use 'mqtt-broker' when running with Docker Compose
# Use 'localhost' for local development
MQTT_BROKER=mqtt-broker
MQTT_PORT=1883
MQTT_USER=flask_backend
# Backend MQTT password is separate from ESP32 device authentication
MQTT_PASSWORD=backend_password

# ESP32 Device Configuration
# MQTT credentials are automatically generated using ESP32's configured prefix

# Server Configuration
HOST=0.0.0.0
PORT=5000

# CORS Configuration
CORS_ORIGINS=*

# Raspberry Pi 5 Optimizations
# Reduce memory usage for ARM architecture
PYTHONUNBUFFERED=1
PYTHONIOENCODING=utf-8

# Optional: Reduce Flask worker processes for Pi
# FLASK_WORKERS=2