# FindSpot Smart Parking System - Environment Configuration# FindSpot Backend Environment Configuration

# Copy this file to .env and fill in your actual values# For Raspberry Pi 5 deployment



# Security (REQUIRED)# Flask Configuration

SECRET_KEY=your_secret_key_hereSECRET_KEY=

MQTT_PASSWORD=your_mqtt_password_hereFLASK_ENV=production

FLASK_DEBUG=False

# Network Configuration

# Update this to your Raspberry Pi's IP address# Database Configuration

PI_IP_ADDRESS=192.168.1.xxxDATABASE_URL=sqlite:///data/findspot.db



# MQTT Configuration (defaults work for most setups)# MQTT Broker Configuration (REQUIRED)

MQTT_USER=flask_backend# Use 'mqtt-broker' when running with Docker Compose

# Use 'localhost' for local development

# Development Override (uncomment for local development without Docker)MQTT_BROKER=mqtt-broker

# MQTT_BROKER=localhostMQTT_PORT=1883
MQTT_USER=flask_backend
# Backend MQTT password is separate from ESP32 device authentication
MQTT_PASSWORD=backend_password

# ESP32 Device Configuration
# MQTT credentials are automatically generated using ESP32's configured prefix

# Server Configuration
HOST=0.0.0.0
PORT=5000

# CORS Configuration
CORS_ORIGINS=*

# Raspberry Pi 5 Optimizations
# Reduce memory usage for ARM architecture
PYTHONUNBUFFERED=1
PYTHONIOENCODING=utf-8

# Optional: Reduce Flask worker processes for Pi
# FLASK_WORKERS=2